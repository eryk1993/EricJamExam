<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b2"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Kapehan ni IndaY n' NenE"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <EditText
            android:id="@+id/name_field"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:hint="Name"
            android:inputType="textCapWords" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:fontFamily="casual"
            android:text="~Coffee~"
            android:textAllCaps="true"
            android:background="#FFFFFF"
            android:textColor="#E91E63"
            android:textSize="25sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/espresso_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="24dp"
            android:text="Espresso"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#F7F2F2"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/cappuccino_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="24dp"
            android:text="Cappuccino"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#F7F1F1"
            android:textSize="20sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="1dp"
            android:fontFamily="casual"
            android:text="~Quantity~"
            android:background="#FFFFFF"

            android:textAllCaps="true"
            android:textColor="#D900FF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">


            <Button
                style="@style/Widget.AppCompat.Button"
                android:layout_width="55dp"
                android:layout_height="59dp"
                android:background="@drawable/k2"
                android:onClick="coffee_decrement"
                android:text="-"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />


            <TextView
                android:id="@+id/coffee_quantity"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="0"
                android:background="#FFFFFF"

                android:textColor="#A26102"
                android:textSize="25sp" />

            <Button
                style="@style/Widget.AppCompat.Button"
                android:layout_width="55dp"
                android:layout_height="59dp"
                android:background="@drawable/k2"
                android:onClick="coffee_increment"
                android:text="+"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="casual"
            android:text="~Desserts~"
            android:textAllCaps="true"
            android:textColor="#E91E63"
            android:background="#FFFFFF"

            android:textSize="25sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/cheese_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="24dp"
            android:text="Cheese Cake"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/ube_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="24dp"
            android:text="Ube Halaya"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="1dp"
            android:fontFamily="casual"
            android:text="~Quantity~"
            android:textAllCaps="true"
            android:textColor="#D900FF"
            android:background="#FFFFFF"

            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">


            <Button
                style="@style/Widget.AppCompat.Button"
                android:layout_width="55dp"
                android:layout_height="59dp"
                android:background="@drawable/k2"
                android:onClick="dessert_decrement"
                android:text="-"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />


            <TextView
                android:id="@+id/dessert_quantity"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="0"
                android:textColor="#A26102"
                android:background="#FFFFFF"

                android:textSize="25sp" />

            <Button
                style="@style/Widget.AppCompat.Button"
                android:layout_width="55dp"
                android:layout_height="59dp"
                android:background="@drawable/k2"
                android:onClick="dessert_increment"
                android:text="+"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        </LinearLayout>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:fontFamily="casual"
            android:text="~Order Summary~"
            android:background="#FFFFFF"
            android:textAllCaps="true"
            android:textColor="#E91E63"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_summary_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="serif-monospace"
            android:text=""
            android:background="#FFFFFF"
            android:textColor="#FF0000"
            android:textSize="20sp" />

        <Button
            style="@style/Widget.AppCompat.Button"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/k2"
            android:fontFamily="casual"
            android:onClick="submitOrder"
            android:text="Order"
            android:textColor="#D1031B"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>

</ScrollView>